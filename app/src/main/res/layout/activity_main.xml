<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.calculate.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/result_area"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:padding="5dp"
            android:textSize="40sp"/>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/colorPrimary"/>

        <TextView
            android:id="@+id/formula_area"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:padding="5dp"
            android:textSize="40sp"/>

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <TableRow android:layout_weight="1">
            <Button android:id="@+id/btn_c" android:text="C" android:textSize="20sp" android:textStyle="bold" android:onClick="onClick"/>
            <Button android:id="@+id/btn_del" android:text="DEL" android:textSize="20sp" android:textStyle="bold" android:onClick="onClick"/>
            <Button android:id="@+id/btn_dot" android:text="." android:textSize="20sp" android:textStyle="bold" android:onClick="onClick"/>
            <Button android:id="@+id/btn_add" android:text="+" android:textSize="20sp" android:textStyle="bold" android:onClick="onClick"/>
        </TableRow>

        <TableRow android:layout_weight="1">
            <Button android:id="@+id/btn_7" android:text="7" android:textSize="20sp" android:textStyle="bold" android:onClick="onClick"/>
            <Button android:id="@+id/btn_8" android:text="8" android:textSize="20sp" android:textStyle="bold" android:onClick="onClick"/>
            <Button android:id="@+id/btn_9" android:text="9" android:textSize="20sp" android:textStyle="bold" android:onClick="onClick"/>
            <Button android:id="@+id/btn_sub" android:text="-" android:textSize="20sp" android:textStyle="bold" android:onClick="onClick"/>
        </TableRow>

        <TableRow android:layout_weight="1">
            <Button android:id="@+id/btn_4" android:text="4" android:textSize="20sp" android:textStyle="bold" android:onClick="onClick"/>
            <Button android:id="@+id/btn_5" android:text="5" android:textSize="20sp" android:textStyle="bold" android:onClick="onClick"/>
            <Button android:id="@+id/btn_6" android:text="6" android:textSize="20sp" android:textStyle="bold" android:onClick="onClick"/>
            <Button android:id="@+id/btn_mul" android:text="*" android:textSize="20sp" android:textStyle="bold" android:onClick="onClick"/>
        </TableRow>

        <TableRow android:layout_weight="1">
            <Button android:id="@+id/btn_1" android:text="1" android:textSize="20sp" android:textStyle="bold" android:onClick="onClick"/>
            <Button android:id="@+id/btn_2" android:text="2" android:textSize="20sp" android:textStyle="bold" android:onClick="onClick"/>
            <Button android:id="@+id/btn_3" android:text="3" android:textSize="20sp" android:textStyle="bold" android:onClick="onClick"/>
            <Button android:id="@+id/btn_div" android:text="/" android:textSize="20sp" android:textStyle="bold" android:onClick="onClick"/>
        </TableRow>

        <TableRow android:layout_weight="1">
            <Button android:id="@+id/btn_0" android:text="0" android:textSize="20sp" android:textStyle="bold" android:layout_span="3" android:onClick="onClick"/>
            <Button android:id="@+id/btn_equ" android:text="=" android:textSize="20sp" android:textStyle="bold" android:onClick="onClick"/>
        </TableRow>

    </TableLayout>

</LinearLayout>
